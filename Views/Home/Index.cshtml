@{
    ViewData["Title"] = "Home Page";
}
<!-- Bring in the model that we are going to use -->
@model IQueryable<Book>

<!-- Give an appropriate title -->
<header style="text-align:center">
    <h1>Welcome to Will's Online Bookstore!</h1>
</header>
<br />

<!-- For the bootstrap, I played around with several table stylings, I like the table-hover best-->
<div>
    <table class="table table-hover">
        <thead> <!-- Column titles-->
            <tr class="font-weight-bold">
                <th style="color:blue">BookID</th>
                <th style="color:blue">Title</th>
                <th style="color:blue">Author First Name</th>
                <th style="color:blue">Author Last Name</th>
                <th style="color:blue">Publisher</th>
                <th style="color:blue">ISBN</th>
                <th style="color:blue">Fiction</th>
                <th style="color:blue">Category</th>
                <th style="color:blue">Price</th>
            </tr>
        </thead>
        <tbody>
            <!-- Loop through and list each property for each Book object using a for loop in Razor code -->
            @foreach (var x in Model)
            {
            <tr>
                <td>@x.BookID</td>
                <td>@x.Title</td>
                <td>@x.AuthorFirst</td>
                <td>@x.AuthorLast</td>
                <td>@x.Publisher</td>
                <td>@x.ISBN</td>
                <td>@x.Fiction</td>
                <td>@x.Category</td>
                <td>$@x.Price</td>
            </tr>
            }
        </tbody>
    </table>
</div><br />
